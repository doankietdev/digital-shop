{
  "name": "digital-world-shop-api",
  "private": true,
  "version": "1.0.0",
  "author": "SE_GROUP",
  "engines": {
    "node": "18.18.2"
  },
  "scripts": {
    "lint": "eslint src --ext js --report-unused-disable-directives --max-warnings 0",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel ./src -d ./build/src && babel ./server.js -d ./build",
    "build": "npm run clean && npm run build-babel",
    "production": "cross-env NODE_ENV=prod npm run build && node ./build/server.js",
    "dev": "cross-env NODE_ENV=dev nodemon --legacy-watch --exec babel-node ./server.js",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000 --forceExit",
    "test:unit": "jest --testTimeout=10000 --testPathPattern=src",
    "test:integration": "cross-env NODE_ENV=test jest --testTimeout=10000 --testPathPattern=tests/integration",
    "test:watch": "cross-env NODE_ENV=test jest --watch --testTimeout=10000 --forceExit"
  },
  "dependencies": {
    "@babel/runtime": "^7.22.10",
    "async-exit-hook": "^2.0.1",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "google-auth-library": "^9.11.0",
    "helmet": "^7.0.0",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.4.1",
    "jest": "^29.7.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongodb-memory-server": "^10.1.2",
    "mongoose": "^8.1.1",
    "mongoose-unique-validator": "^5.0.0",
    "ms": "^2.1.3",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cron": "^3.0.3",
    "node-forge": "^1.3.1",
    "nodemailer": "^6.9.8",
    "object-hash": "^3.0.0",
    "otp-generator": "^4.0.1",
    "slugify": "^1.6.6",
    "supertest": "^7.0.0",
    "totp-generator": "^1.0.0",
    "ua-parser-js": "^1.0.39",
    "useragent": "^2.3.0",
    "uuid": "^10.0.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.10",
    "@babel/core": "^7.22.10",
    "@babel/eslint-parser": "^7.22.10",
    "@babel/node": "^7.22.10",
    "@babel/plugin-transform-runtime": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "babel-plugin-module-resolver": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.7"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/bootstrap.js"
    ]
  }
}
